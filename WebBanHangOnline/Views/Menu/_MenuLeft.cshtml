@model IEnumerable<WebBanHangOnline.Models.EF.ProductCategory>

@if (Model != null && Model.Any())
{
<ul class="sidebar_categories" style="color: #F23611">
    <li><a style="color: #F23611" href="/san-pham">Tất cả sản phẩm</a></li>
    @foreach (var item in Model)
    {
        if (ViewBag.CateId == item.Id)
        {
            <li class="active"><a style="color: #F23611" href="/danh-muc-san-pham/@item.Alias-@(item.Id)"><span><i class="fa fa-angle-double-right" aria-hidden="true"></i></span>@item.Title</a></li>
        }
        else
        {
            <li><a style="color: #F23611" href="/danh-muc-san-pham/@item.Alias-@(item.Id)">@item.Title</a></li>
        }
    }
</ul>
}